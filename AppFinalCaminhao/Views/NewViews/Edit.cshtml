@{
    ViewData["Title"] = "Edição de Caminhão";
}
@model Caminhao
<div class="text-center">
    <h1 class="display-4">Edição de Caminhão</h1>

</div>
@*é o method post que faz ele ir para a edit httppost na controller?*@
<form asp-controller="NewViews" asp-action="Edit" asp-route-id="@Model.Id" method="post" >
    <input type="hidden " asp-for="Id"  />
  <div class="form-group">
    <label>Nome</label>
    <input asp-for="Nome" asp-controller="NewViews" type="text" class="form-control" placeholder="Nome do caminhão">
    @Html.ValidationMessageFor(x => x.Nome)
  </div>
  <div class="form-group">
    <label>Descrição</label>
    <input type="text" asp-for="Descricao" class="form-control"  placeholder="Descreva o caminhão">
    @Html.ValidationMessageFor(x => x.Descricao)
  </div>
  <div class="form-group">
    <label>Data de Criação</label>
    <input type="text" asp-for="DataCriacao" class="form-control"  placeholder="Data de criação">
    @Html.ValidationMessageFor(x => x.DataCriacao)
  </div>
  <div class="form-group">
    <label>Modelo</label>
    <input type="number" asp-for="Modelo" class="form-control"  placeholder="Modelo">
    @Html.ValidationMessageFor(x => x.Modelo)
  </div>
  <button type="submit" class="btn btn-primary">Atualizar</button>
</form>
